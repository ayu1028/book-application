<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, user-scalable=yes">
    <title>The Books</title>
    <link rel="stylesheet" href='/stylesheets/style.css'>
    <script src="https://kit.fontawesome.com/f408a441a0.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <div class="container">
      <header class="header-container">
        <div class="head-content title-container">
          <a href="#">
            The Books
            <i class="fas fa-book" aria-hidden="true"></i>
          </a>
        </div>
        <div class="head-content register-container">
          <% if(typeof user !== 'undefined') { %>
            <a href="/logout" class="btn">ログアウト</a><!--ログイン後に表示する-->
          <% } else { %>
            <a href="/register" class="btn">新規登録</a><!--未ログイン時に表示する-->
            <a href="/login" class="btn">ログイン</a>
          <% } %> 
        </div>
      </header>
      <div class="contents">
        <div class="main-container">
          <div class="side-container">
            <p>Welcome!</p>
            <% if(typeof user !== 'undefined') { %>
              <!--ログイン後に表示する-->
              <a href="/users/<%= user.id %>" class="white-background user-info-box">
                <div class="image-box">
                  <img class="user-image" src="https://res.cloudinary.com/dtmue1o4b/image/upload/v1605691025/qkormwwrjv8anyrwzy1b.jpg">
                </div>
                <div class="info">
                  <div class="info-name">
                    <span><%= user.user_name %> さん</span>
                  </div>
                  <div class="info-numbers">
                    <span>投稿数：<%= totalNumber %> </span>
                  </div>
                </div>
              </a>
            <% } else { %>
              <!--未ログイン時に表示する-->
              <div class="white-background user-info-box">
                <div class="image-box">
                  <img class="user-image" src="https://res.cloudinary.com/dtmue1o4b/image/upload/v1605691025/qkormwwrjv8anyrwzy1b.jpg">
                </div>
                <div class="info">
                  <div class="info-name">
                    <span>Guest さん</span>
                  </div>
                  <div class="info-numbers">
                    <span>投稿数：0</span>
                  </div>
                </div>
              </div>
            <% } %>
            <a href="/post" class="btn post">投稿する</a>
          </div>
          <div id="app" class="contents-container">
            <p>新着記事一覧</p>
            <span>ジャンル選択：</span>
            <select id="js-genre" name="genre">
              <option value="">すべて</option>
              <option value="ラノベ">ラノベ</option>
              <option value="小説">小説</option>
              <option value="自己啓発">自己啓発</option>
              <option value="SF">SF</option>
              <option value="政治・経済">政治・経済</option>
              <option value="マンガ">マンガ</option>
              <option value="趣味">趣味</option>
              <option value="ミステリー">ミステリー</option>
            </select>
            <button class="btn-mini" v-on:click="impressionsAll">選択</button>
            {{ impressions }}
            <% for(let i in contents) { %>
              <a href="/impression/<%= contents[i].id %>" class="white-background book-info-box">
                <div class="image-box">
                  <img class="book-image" src="<%= contents[i].book.book_path %>">
                </div>
                <div class="info">
                  <div class="book-name">
                    <p><%= contents[i].book.book_name %></p>
                    <p class="user-and-date">著者：<%= contents[i].book.author %></p>
                  </div>
                  <div class="imp-title">
                    <p><%= contents[i].title %></p>
                    <p class="user-and-date">
                      <% const date = new Date(contents[i].updatedAt); %>
                      <% const str =`${date.getFullYear()}年${date.getMonth() + 1}月${date.getDate()}日`; %>
                      投稿者：
                      <% if (contents[i].user) { %> 
                        <%= contents[i].user.user_name %>
                        <% } else { %>
                        Guest
                        <% } %>
                        　ジャンル：<%= contents[i].genre %>
                        　投稿日：<%= str %>
                    </p>
                  </div>
                </div>
              </a>
            <% } %>
          </div>
        </div>
      </div>
      <footer>
        <p>
          <a href="#">Ayumi Yamamori</a> all rights reserved
        </p>
      </footer>
    </div>
    <script src="./javascripts/vue.js"></script>
  </body>
</html>